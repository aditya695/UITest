<?xml version="1.0" encoding="utf-8"?>


    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"


        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:cardCornerRadius="@dimen/_4sdp"
        app:cardBackgroundColor="@color/white"
    android:elevation="8dp"


    card_view:cardElevation="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"


    >
<!--
    card_view:cardElevation="@dimen/_50sdp"
-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
        <TextView
            android:id="@+id/module_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Module :"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_10sdp"

            android:layout_marginTop="@dimen/_10sdp"
            />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_20sdp"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="@dimen/_15sdp"
    android:layout_marginRight="@dimen/_10sdp">

    <TextView
        android:id="@+id/module_text2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:gravity="center"
        android:text="01"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp" />
    <View
        android:id="@+id/module_text3"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@android:color/holo_red_dark"
        />
    <TextView
        android:id="@+id/module_text4"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="And I am Iron Man!"

        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:gravity="center"


        />
</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_10sdp">

        <TextView
            android:id="@+id/module_text5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_alignParentLeft="true"

            android:gravity="center"
            android:text="Level : "
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_10sdp"

             />

        <TextView
            android:id="@+id/module_text6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/module_text5"
            android:gravity="center"
            android:text="Sacrifice "

            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />




        <TextView
            android:id="@+id/module_text8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="2019"
            android:paddingTop="4dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />
        <TextView
            android:id="@+id/module_text7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Chapter : "

            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/module_text8"/>
    </RelativeLayout>
<ProgressBar
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_marginLeft="@dimen/_15sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:indeterminate="false"
    android:max="100"
    android:id="@+id/progressBar"
    android:minHeight="200dp"
    android:minWidth="300dp"
    android:progress="40"/>
</LinearLayout>
    </android.support.v7.widget.CardView>

